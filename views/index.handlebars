<h1>Eat Da Burger!</h1>

<h2>Burgers to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        <h5>{{this.burger_name}}
          <form action='/api/burgers/{{this.id}}' method='POST'>
            <input type='hidden' name='devoured' value='true'>
            <button type='submit' >EAT THIS!</button>
          </form>
        </h5>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers eaten!</h2>
  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}
        </li>
      {{/if}}
    {{/each}}
  </ul>




<h2>Add a Burger</h2>
<form class="create-form" action="/api/burgers" method="POST">
  <textarea type="text" name="name"></textarea>
  <button type="submit">Add Burger</button>
</form>

